        "moment": true,
        "window": true,
        "alert": true,
        "console": true,
        "setTimeout": true,
        "require": true,
        "module": true
    },
    
    // MORE OTHER
    
    // Whether ES5 syntax should be allowed.
    "es5": false,
    
    // Whether `.` should be forbidden in regexp literals.
    "regexp": false,

